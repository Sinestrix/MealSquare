{% extends sonata_block.templates.block_base %}

{% block block %}

    <div class="sonata-block-recent-users box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">
                <i class="fa fa-users"></i> {{ settings.title }}
            </h3>
        </div>

        <div class="box-body">
            {% sonata_template_box 'This is the recent user block.' %}

            <div class="sonata-user-container list-group">
                {% for user in users %}
                    <a class="list-group-item" href="http://localhost/MealSquare/web/app_dev.php/admin/sonata/user/user/{{ user.id }}/edit">{{ user.username }} - créé le {{ user.createdAt|date('Y-m-d H:i:s') }} et connecté la dernière fois le {{ user.lastLogin|date('Y-m-d H:i:s') }}</a>
                {% else %}
                    <a class="list-group-item" href="#">no user found</a>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}
